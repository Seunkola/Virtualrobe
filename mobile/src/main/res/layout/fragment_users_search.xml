<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/image"
        android:layout_width="@dimen/comment_avatar_size"
        android:layout_height="@dimen/comment_avatar_size"
        android:layout_margin="@dimen/text_margin"
        android:background="@drawable/bg_comment_avatar"  />


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="@dimen/text_margin2"
       >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:text="seun"
            android:id="@+id/content"
            android:textColor="#000"
            android:textStyle="bold"
            android:textAppearance="?attr/textAppearanceListItem"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="seun kola"
            android:textSize="15sp"
            android:id="@+id/fullname"
            android:textAppearance="?attr/textAppearanceListItem"/>

    </LinearLayout>

</LinearLayout>