<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_margin="10dp"
    >
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!--gif view -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/gifview"
            android:background="@color/black">

            <com.medialablk.easygifview.EasyGifView
                android:id="@+id/easyGifView"
                android:layout_width="wrap_content"
                android:layout_height="200dp"
                android:src="@drawable/boy"
                android:layout_centerHorizontal="true"
                />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/gifview">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/greetings"
                android:text="Hello,"
                android:paddingLeft="10dp"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:layout_marginTop="15dp"
                android:textStyle="bold"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="The next step is to know you more in order to serve you better."
                android:id="@+id/step"
                android:textSize="15sp"
                android:layout_marginTop="15dp"
                android:textStyle="bold"
                android:layout_below="@+id/greetings"
                android:textAlignment="center"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Lets start answering the questions"
                android:id="@+id/welcome_stylist"
                android:textAlignment="center"
                android:textSize="15sp"
                android:layout_marginTop="15dp"
                android:layout_below="@+id/step"/>

            <!--buttons-->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/welcome_stylist"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="0dp"
                android:layout_marginBottom="@dimen/margin_30"
                android:padding="10dp">


                <Button
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/chip_selected"
                    android:text="start"
                    android:id="@+id/ok_button"
                    android:textColor="@color/white"
                    android:textSize="15sp"
                    />

            </LinearLayout>

        </RelativeLayout>

    </RelativeLayout>
</android.support.v7.widget.CardView>

